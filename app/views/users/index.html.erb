

<p id="notice"><%= notice %></p>
<div class="row no-gutters">
  <div class="col-md-4"><h1>Users</h1></div>
  <div class="col-md-4"></div>
  <div class="col-md-4 align-items-right text-right"><%= link_to 'New User', new_user_path, class: 'btn btn-outline-success' %></div>


<table class="table table-dark no-gutters">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">Boards</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= Board.where(user_id: user.id).count %></td>
        <td><%= link_to 'Show', user, class:'btn btn-outline-dark btn-sm' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-outline-dark btn-sm' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-dark btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
