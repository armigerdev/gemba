= simple_form_for @list do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this board from being saved:"
      %ul
        - @list.errors.full_messages.each do |message|
          %li= message
  = f.input :title
  = f.input :description
  = f.input :board_id, collection: Board.all
  = f.button :submit, 'Save', class: 'btn btn-primary'
